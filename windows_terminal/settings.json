            "selectionBackground": "#E0E0E0",
            "black":               "#000000",
            "blue":                "#0000D0",
            "brightBlack":         "#000000",
            "brightBlue":          "#2070FF",
            "brightCyan":          "#00FFFF",
            "brightGreen":         "#20FF20",
            "brightPurple":        "#FF40FF",
            "brightRed":           "#FF4040",
            "brightWhite":         "#FFFFFF",
            "brightYellow":        "#FFFF40",
